// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model NewsletterBatch {
  id        Int      @id @default(autoincrement())
  siteId    String
  fromEmail String
  contents  String
  batchId   String
  created   DateTime @default(now())
}

model NewslettersMessages {
  id                 Int                       @id @default(autoincrement())
  siteId             String
  messageId          String                    @unique
  toEmail            String
  contents           String
  batchId            String
  created            DateTime                  @default(now())
  notificationEvents NewsletterNotifications[]
}

model NewslettersErrors {
  id       Int      @id @default(autoincrement())
  siteId   String
  toEmail  String
  contents String
  batchId  String
  message  String
  created  DateTime @default(now())
}

model NewsletterNotifications {
  id             Int                 @id @default(autoincrement())
  type           String
  notificationId String              @unique
  newsletter     NewslettersMessages @relation(fields: [messageId], references: [messageId])
  messageId      String
  rawEvent       String
  timestamp      DateTime
  created        DateTime            @default(now())
}
